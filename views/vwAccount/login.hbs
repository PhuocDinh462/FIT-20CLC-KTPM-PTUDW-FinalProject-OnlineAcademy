{{#section "css"}}
    <link rel="stylesheet" type="text/css" href="../../../public/assets/css/login.css" />
{{/section}}
    <div class="container">
      <div class="d-flex justify-content-center h-100">
        <div class="card">
          <div class="card-header" align="center">
            <h3 style="color: black">LOGIN</h3>
          </div>

          <div class="card-body">
            <form id="frmLogin" method="post" action="">
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class ="fa fa-user" ></i></span>
                </div>
                <input type="text" class="form-control" placeholder="your email" name="email" required/>

              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-key" ></i></span>
                </div>
                <input type="password" class="form-control" placeholder="password" name="password" required />
              </div>
              <div class="form-group">
                <input type="submit" value="Login" class="btn float-right login_btn" formaction="/account/login" />
              </div>


            </form>

          </div>
            <a href="/account/auth/facebook" class="btn btn-block btn-facebook">
                <i class="fa fa-facebook"></i> <span class="hidden-xs hidden-sm">Login with Facebook</span>
            </a>
            <a href="/account/login_gg" class="btn btn-block btn-twitter">
                <i class="fa fa-google"></i> <span class="hidden-xs hidden-sm">Login with Google</span>
            </a>
          <div class="card-footer">
            <div class="d-flex justify-content-center links" style="color: black">
              Don't have an account?<a href="/account/register">Sign Up</a>
            </div>
          </div>
        </div>
      </div>
    </div>