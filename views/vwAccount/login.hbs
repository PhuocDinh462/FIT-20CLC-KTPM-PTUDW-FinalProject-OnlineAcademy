{{#section "css"}}
    <link rel="stylesheet" type="text/css" href="../../public/assets/css/login.css" />
    <link rel="stylesheet" type="text/css" href="../../public/assets/css/validation/form.css"/>  
   <style>
    footer
    { margin-top: 50px; } 
  </style>
{{/section}}
{{#section "js"}}
  <script src="../../public/assets/js/validator.js"></script>
  <script>
  
    
      Validator({
          form: '#frmLogin',
          rules: [
              Validator.isEmail('#email'),
              Validator.isRequired('#password', "Please input your password"),
          ]
      });
  </script>
  
{{/section}}
<div class="container-fluid" style="min-height:600px">
  <div class="row" style="margin-top:130px; margin-bottom: 20px; justify-content: center;" >
        <div class="card">
            {{#if err_message}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong>Login failed!</strong> {{err_message}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          {{/if}}
          <div class="card-header text-center">
            <h3 style="margin:0">LOG IN</h3>
          </div>

          <div class="card-body">
            <form id="frmLogin" method="post" action="">
              <div class="input-group form-group" style="display:flex; flex-direction: column;">
                <label class="h6" for="email" style="float:left">Email</label>
                <input id="email" type="text" class="form-control w-100" placeholder="Email" name="email"/>
                <span class="form-message"></span>
              </div>
              <div class="input-group form-group" style="display:flex; flex-direction: column;">
                <label class="h6" for="password">Password</label>
                <input id="password" type="password" class="form-control w-100" placeholder="Password" name="password"/>
                <span class="form-message"></span>
              </div>
              <div class="form-group">
                  <input type="submit" value="Log In" class="btn login_btn" formaction="/account/login" />
              </div>
              <div class="d-flex justify-content-center links" style="color: black">
              Don't have an account?<a href="/account/register">Sign Up</a>
            </div>
            </form>
          </div>
        </div>
  </div>
</div>