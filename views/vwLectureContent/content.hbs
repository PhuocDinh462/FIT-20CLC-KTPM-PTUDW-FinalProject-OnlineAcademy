{{#section "css"}}
  <link
    rel="stylesheet"
    type="text/css"
    href="../../../public/assets/css/lecture.css"
  />
  <link
    rel="stylesheet"
    type="text/css"
    href="https://vjs.zencdn.net/7.20.3/video-js.css"
  />
{{/section}}
{{#section "js"}}
  <script src="https://vjs.zencdn.net/7.20.3/video.min.js"></script>
  <script src="../../public/assets/js/lecture/lecture.js"></script>
{{/section}}
<div class="main-lecture-content">
  <div class="container-lecture">
    <div class="heading-lecture">
      <nav
        class="navbar navbar-expand-lg navbar-light bg-light"
        style="background-color: #2B6777 !important; color: #fff"
      >
        <a
          class="navbar-brand"
          href="#"
          style="color: #fff; margin-left: 0;"
        >AcademyOnline</a>

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="name-course">
          {{course.name}}
        </div>
      </nav>
    </div>
    <div class="main-content">
      <div class="block-video">
        <video
          id="my-video"
          class="video-js"
          controls
          preload="auto"
          poster="MY_VIDEO_POSTER.jpg"
          data-setup="{}"
        >
          <source
            src="../../../public/assets/video/{{lecture.video}}"
            type="video/webm"
          />
          <p class="vjs-no-js">
            To view this video please enable JavaScript, and consider upgrading
            to a web browser that
            <a
              href="https://videojs.com/html5-video-support/"
              target="_blank"
            >supports HTML5 video</a>
          </p>
        </video>
        <div class="heading-lecture">
          {{lecture.name}}
        </div>
        <div class="main-rating">
          <div class="main-title">
            <h2>Student feedback</h2>
            <div class="card-body">
              <div class="row">
                <div class="col-md-4">
                  <div id="number_rating" class="rating_circle">{{rate}}</div>
                  <div>
                    <div class="stars-outer mt-4">
                      <div class="stars-inner"></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-7">
                  <div class="progress mt-5" style="height:10px">
                    <div
                      class="progress-bar-striped"
                      style="width:{{star.s5}}%;height:10px"
                    ></div>
                  </div>
                  <div class="progress mt-3" style="height:10px">
                    <div
                      class="progress-bar-striped"
                      style="width:{{star.s4}}%;height:10px"
                    ></div>
                  </div>
                  <div class="progress mt-3" style="height:10px">
                    <div
                      class="progress-bar-striped"
                      style="width:{{star.s3}}%;height:10px"
                    ></div>
                  </div>
                  <div class="progress mt-3" style="height:10px">
                    <div
                      class="progress-bar-striped"
                      style="width:{{star.s2}}%;height:10px"
                    ></div>
                  </div>
                  <div class="progress mt-3" style="height:10px">
                    <div
                      class="progress-bar-striped"
                      style="width:{{star.s1}}%;height:10px"
                    ></div>
                  </div>
                </div>
                <div class="col-md-1">
                  <div class="row">
                    <h6 class="">5</h6>
                  </div>
                  <div class="row">
                    <h6 class="">4</h6>
                  </div>
                  <div class="row">
                    <h6 class="">3</h6>
                  </div>
                  <div class="row">
                    <h6 class="">2</h6>
                  </div>
                  <div class="row">
                    <h6 class="">1</h6>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <form method="post">
                <div class="form-group">
                  <button
                    type="button"
                    class="btn btn-info btn-lg openmodal btn-send-feedback"
                    data-toggle="modal"
                    data-target="#myModal"
                    style="background-color: #52AB98;"
                  >Send feedback</button>

                  <!--Division for Modal-->
                  <div id="myModal" class="modal fade" role="dialog">
                    <!--Modal-->
                    <div class="modal-dialog">
                      <!--Modal Content-->
                      <div class="modal-content">

                        <!-- Modal Header-->
                        <div class="modal-header">
                          <h3>Feedback Request</h3>

                          <!--Close/Cross Button-->
                          <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            style="color: white;"
                          >&times;</button>
                        </div>

                        <!-- Modal Body-->
                        <div class="modal-body text-center">
                          <i
                            class="far fa-file-alt fa-4x mb-3 animated rotateIn icon1"
                          ></i>
                          <h3>Your opinion matters</h3>
                          <h5>Help us improve our product?
                            <strong>Give us your feedback.</strong></h5>
                          <hr />
                          <h6>Your Rating</h6>
                        </div>

                        <!-- Radio Buttons for Rating-->
                        <div
                          class="container d-flex justify-content-center"
                          style="background-color: #C8D8E4; width: 80%"
                        >
                          <div class="row">
                            <div class="col-md-12">
                              <div class="stars">
                                <form>
                                  <input
                                    class="star star-5"
                                    id="star-5"
                                    type="radio"
                                    value="5"
                                    name="star"
                                  />
                                  <label
                                    class="star star-5"
                                    for="star-5"
                                  ></label>
                                  <input
                                    class="star star-4"
                                    id="star-4"
                                    type="radio"
                                    value="4"
                                    name="star"
                                  />
                                  <label
                                    class="star star-4"
                                    for="star-4"
                                  ></label>
                                  <input
                                    class="star star-3"
                                    id="star-3"
                                    type="radio"
                                    value="3"
                                    name="star"
                                  />
                                  <label
                                    class="star star-3"
                                    for="star-3"
                                  ></label>
                                  <input
                                    class="star star-2"
                                    id="star-2"
                                    type="radio"
                                    value="2"
                                    name="star"
                                  />
                                  <label
                                    class="star star-2"
                                    for="star-2"
                                  ></label>
                                  <input
                                    class="star star-1"
                                    id="star-1"
                                    type="radio"
                                    value="1"
                                    name="star"
                                  />
                                  <label
                                    class="star star-1"
                                    for="star-1"
                                  ></label>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>

                        <!--Text Message-->
                        <div class="text-center modal-body">
                          <h4>What could we improve?</h4>
                        </div>
                        <textarea
                          type="textarea"
                          placeholder=" Your Message"
                          name="content"
                          rows="3"
                        ></textarea>

                        <!-- Modal Footer-->
                        <div class="modal-footer">
                          <button
                            {{! href="" }}
                            type="submit"
                            class="btn btn-primary btn-web-send"
                            formaction="/courses/learn/63b19ad71aa34d2d78b7232a/63b19ad71aa34d2d78b7232a"
                          >Send
                            <i class="fa fa-paper-plane"></i>
                          </button>
                          <a
                            href=""
                            class="btn btn-outline-primary btn-web-cancel"
                            data-dismiss="modal"
                          >Cancel</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            {{#each feedbackList}}
              <div class="content-rating">
                <div class="review-container">
                  <div class="review-heading">
                    <div class="review-profile">
                      <div class="block-img">
                        {{#if (isEmpty user.image)}}
                          {{#if gender}}
                            <img
                              src="../../public/assets/images/no_avt_male.png"
                              alt="avatar"
                            />
                          {{else}}
                            <img
                              src="../../public/assets/images/no_avt_female.png"
                              alt="avatar"
                            />
                          {{/if}}
                        {{else}}
                          <img
                            src="../../public/assets/images/{{user.image}}"
                            alt="avatar"
                          />
                        {{/if}}
                      </div>
                      <div class="review-infomation">
                        <h3>{{user.lastName}} {{user.firstName}}</h3>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <span class="week">{{feedback.createdAt}}</span>
                      </div>
                    </div>
                    <div class="popper">
                      <div class="btn-group">
                        <button
                          class="btn btn-secondary dropdown-toggle"
                          type="button"
                          id="triggerId"
                          data-toggle="dropdown"
                          aria-haspopup="true"
                          aria-expanded="false"
                        ></button>
                        <div
                          class="dropdown-menu dropdown-menu-right"
                          aria-labelledby="triggerId"
                        >
                          <a class="dropdown-item" href="#">Report</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="review-content">
                    {{feedback.content}}
                  </div>
                  <div class="rewiew-rating">
                    <div class="help">Helpful?</div>
                    <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                    <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="accordion-panel" style="width: 35%;">
        <div
          class="sticky-panel"
          id="accordianId"
          role="tablist"
          aria-multiselectable="true"
          witdth="100%"
        >
          <div class="header-course">Course Content</div>
          <div class="card card-content">
            <div class="card-header" role="tab" id="section1HeaderId">
              <h5 class="mb-0">
                <div
                  data-toggle="collapse"
                  data-parent="#accordianId"
                  href="#section1ContentId"
                  aria-expanded="true"
                  aria-controls="section1ContentId"
                >
                  <div class="accordion-course">
                    <i class="fa fa-chevron-down icon" aria-hidden="true"></i>
                    <div class="block-title">
                      <button class="btn-list-course">
                        <span class="course-title">
                          <span>Category: {{course.categoryName}}</span>
                          <span>
                            {{lectureStudied}}/{{course.lecture.length}}
                            | 1hr29min
                          </span>
                        </span>
                      </button>
                    </div>
                  </div>
                </div>
              </h5>
            </div>
            <div
              id="section1ContentId"
              class="collapse in"
              role="tabpanel"
              aria-labelledby="section1HeaderId"
            >
              <div class="card-body">
                <ul class="block-list">
                  <table
                    class="table-bordered table-striped table-condensed table-fixed"
                  >
                    {{#each lectureList}}
                      <li>
                        <div class="section-previewable">
                          <div>
                            <span>
                              <input
                                type="checkbox"
                                name="checked"
                                id="checkbox"
                              />
                            </span>
                          </div>
                          <div class="block-list-item-content">
                            <a
                              src="/courses/learn/{{_id}}"
                              class="name-content"
                            >
                              {{name}}
                            </a>
                            <div class="review-time">
                              <i
                                class="fa fa-play-circle icon-item-content"
                                aria-hidden="true"
                              ></i>
                              <span>4:10</span>
                            </div>
                          </div>
                        </div>
                      </li>
                    {{/each}}
                  </table>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>