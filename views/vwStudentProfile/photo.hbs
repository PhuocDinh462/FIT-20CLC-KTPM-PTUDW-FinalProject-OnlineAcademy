{{#section "css"}}
  <link rel="stylesheet" href="../../public/assets/css/student_profile.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/css/fileinput.min.css"
  />
  <style>
    footer { margin-top: 30px; }
  </style>
{{/section}}
{{#section "js"}}
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/plugins/buffer.min.js"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/plugins/filetype.min.js"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/plugins/piexif.min.js"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/plugins/sortable.min.js"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/fileinput.min.js"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/themes/fa4/theme.min.js"
  ></script>
  <script>
    $('#student-avatar').fileinput({ dropZoneEnabled: false, maxFileCount: 1,
    theme: 'fa4', allowedFileExtensions: ['jpg', 'png', 'gif'], });
  </script>
{{/section}}

<div style="margin-top: 80px;">
  <div class="main-content-student">
    <div class="container">
      <div class="row">
        <div
          class="col-md-2 d-none d-md-block bg-light sidebar"
          style="height: 100%;"
        >
          <div class="list-group" id="list-tab" role="tablist">
            <div class="card text-center" style="background-color: #F2F2F2;">
              <div class="img-profile">
                {{#if (isEmpty user.image)}}
                  {{#if gender}}
                    <img
                      class="img-fluid rounded-circle img-thumbnail img-responsive"
                      src="../../public/assets/images/no_avt_male.png"
                      alt="avatar"
                    />
                  {{else}}
                    <img
                      class="img-fluid rounded-circle img-thumbnail img-responsive"
                      src="../../public/assets/images/no_avt_female.png"
                      alt="avatar"
                    />
                  {{/if}}
                {{else}}
                  <img
                    class="img-fluid rounded-circle img-thumbnail img-responsive"
                    src="../../public/assets/images/{{user.image}}"
                    alt="avatar"
                  />
                {{/if}}
              </div>
              <div>
                <p>{{name}}</p>
              </div>
            </div>
            <a
              href="/student"
              class="list-group-item list-group-item-action"
              id="list-profile-list"
            >Profile</a>
            <a
              href="/student/photo"
              class="list-group-item list-group-item-action active"
              id="list-photo-list"
            >Photo</a>
            <a
              href="/student/account_security"
              class="list-group-item list-group-item-action"
              id="list-password-list"
            >Account Security</a>
            <a
              href="/student/course_learn"
              class="list-group-item list-group-item-action"
              id="list-courses-list"
            >My learning</a>
            <a
              href="/student/favorite_course"
              class="list-group-item list-group-item-action"
              id="list-favorite-list"
            >Favorite course</a>
          </div>
        </div>
        <div class="col-9 h-100">
          <div class="tab-content" id="nav-tabContent">
            <div
              class="tab-pane fade show active"
              id="list-photo"
              role="tabpanel"
              aria-labelledby="list-photo-list "
            >
              <div class="card text-center">
                <div
                  class="card-header"
                  style="background-color: #2b6777; color: #ffffff;"
                >
                  <h3>Photo</h3>
                  <p>Add a nice photo of yourself for your profile</p>
                </div>
                <div class="card-body" style="background-color: #f2f2f2;">
                  <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="" class="d-flex p-2">Image preview</label>
                      <div
                        class="text-center rounded mx-auto p-3 col-md-8 border border-dark-1 img-choose"
                      >
                        {{#if (isEmpty user.image)}}
                          {{#if gender}}
                            <img
                              class="img-fluid rounded-circle img-thumbnail img-responsive"
                              src="../../public/assets/images/no_avt_male.png"
                              alt="avatar"
                            />
                          {{else}}
                            <img
                              class="img-fluid rounded-circle img-thumbnail img-responsive"
                              src="../../public/assets/images/no_avt_female.png"
                              alt="avatar"
                            />
                          {{/if}}
                        {{else}}
                          <img
                            class="img-fluid rounded-circle img-thumbnail img-responsive"
                            src="../../public/assets/images/{{user.image}}"
                            alt="avatar"
                          />
                        {{/if}}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="" class="d-flex p-2">Add / Change Image</label>
                      <div class="">
                        <div class="custom-file">
                          <input
                            type="file"
                            id="student-avatar"
                            name="student-avatar"
                            class="custom-file-input"
                            accept="image/*"
                          />
                        </div>
                      </div>
                    </div>
                    <button
                      type="submit"
                      class="btn btn-primary d-flex px-4 course-btn"
                    >Save</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>