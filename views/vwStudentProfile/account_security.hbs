{{#section "css"}}
  <link rel="stylesheet" href="../../public/assets/css/student_profile.css" />
  <style>
    footer { margin-top:30px; }
  </style>
{{/section}}
{{#section "js"}}
  <script src="../../public/assets/js/profile/security.js"></script>
{{/section}}
<form id="form" method="post">
  <div style="margin-top: 80px;">
    <div class="main-content-student">
      <div class="container">
        <div class="row">
          <div
            class="col-md-2 d-none d-md-block bg-light sidebar"
            style="height: 100%;"
          >
            <div class="list-group" id="list-tab" role="tablist">
              <div class="card text-center" style="background-color: #F2F2F2;">
                <div class="img-profile">
                  {{#if (isEmpty user.image)}}
                    {{#if gender}}
                      <img
                        class="img-fluid rounded-circle img-thumbnail img-responsive"
                        src="../../public/assets/images/no_avt_male.png"
                        alt="avatar"
                      />
                    {{else}}
                      <img
                        class="img-fluid rounded-circle img-thumbnail img-responsive"
                        src="../../public/assets/images/no_avt_female.png"
                        alt="avatar"
                      />
                    {{/if}}
                  {{else}}
                    <img
                      class="img-fluid rounded-circle img-thumbnail img-responsive"
                      src="../../public/assets/images/{{user.image}}"
                      alt="avatar"
                    />
                  {{/if}}
                </div>
                <div>
                  <p>Name</p>
                </div>
              </div>
              <a
                href="/student"
                class="list-group-item list-group-item-action"
                id="list-profile-list"
              >Profile</a>
              <a
                href="/student/photo"
                class="list-group-item list-group-item-action"
                id="list-photo-list"
              >Photo</a>
              <a
                href="/student/account_security"
                class="list-group-item list-group-item-action active"
                id="list-password-list"
              >Account Security</a>
              <a
                href="/student/course_learn"
                class="list-group-item list-group-item-action"
                id="list-courses-list"
              >My learning</a>
              <a
                href="/student/favorite_course"
                class="list-group-item list-group-item-action"
                id="list-favorite-list"
              >Favorite course</a>
            </div>
          </div>
          <div class="col-9 h-100">
            <div class="tab-content" id="nav-tabContent">
              <div
                class="tab-pane fade show active"
                id="list-password"
                role="tabpanel"
                aria-labelledby="list-password-list"
              >
                <div class="card text-center">
                  <div
                    class="card-header"
                    style="background-color: #2b6777; color: #ffffff;"
                  >
                    <h3>Account</h3>
                    <p>Edit your account settings and change your password here
                    </p>
                  </div>
                  <div class="card-body" style="background-color: #f2f2f2;">

                    <div class="form-group">
                      <label for="" class="d-flex p-2">Password:</label>
                      <input
                        id="currentPassword"
                        name="currentPassword"
                        type="password"
                        class="form-control"
                        placeholder="Enter current password"
                      />
                      <div id="strengthMessage"></div>
                    </div>
                    <div class="form-group">
                      <input
                        id="newPassword"
                        name="newPassword"
                        type="password"
                        class="form-control"
                        placeholder="Enter new password"
                      />
                      <div id="strengthMessage1"></div>
                    </div>
                    <div class="form-group">
                      <input
                        id="rePassword"
                        name="rePassword"
                        type="password"
                        class="form-control"
                        placeholder="Re-type new password"
                      />
                      <div id="strengthMessage2"></div>
                    </div>
                    <button
                      type="submit"
                      class="btn btn-primary d-flex px-4 course-btn"
                      formaction="/student/account_security"
                    >Change password</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>