<div class="col-6">
  <form class="form-inline" action="/categories/search?" id="search-form">
    <input
      class="form-control mr-sm-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
      style="width: 90%; height: 1.105cm"
      name="key"
      id="search-textfield"
    />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
      <i class="fa fa-search" aria-hidden="true"></i>
    </button>
  </form>
</div>
<div class="col-2">
  <div class="btn-group">
    <a
      class="nav-link dropdown-toggle"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
      style="color: black"
    >
      Welcome,
      <b>{{authUser.firstName}} {{authUser.lastName}}</b>
    </a>
    <div class="dropdown-menu" align="right">
      <a class="dropdown-item" href="/teacher/profile">Personal Profile</a>
      <a class="dropdown-item" href="/teacher/profile/my_course">My courses</a>
      <a class="dropdown-item" href="#">Setting</a>
      <div class="dropdown-divider"></div>
      <form id="frmLogout" action="/account/logout" method="post"></form>
      <a class="dropdown-item" href="/account/logout">
        <i class="fa fa-sign-out" aria-hidden="true"></i>
        Logout
      </a>
    </div>
  </div>
</div>

<script>
  document.querySelector("#search-form").addEventListener("submit", function (e) { if
  (document.getElementById("search-textfield").value.trim() === "") { e.preventDefault(); } });
</script>