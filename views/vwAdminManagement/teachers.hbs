<div class="container-fluid" style="margin-top: 80px;">
  <div class="row">
    <div class="col-sm-3">
      <div class="card mb-3">
        <h4
          class="card-header"
          style="background-color:#52ab98; color:#fff"
        >Management</h4>
        <div class="list-group list-group-flush">
          <a href="/admin" class="list-group-item list-group-item-action">
            All User
          </a>
          <a
            href="/admin/managestudents"
            class="list-group-item list-group-item-action"
          >Student</a>
          <a
            href="/admin/manageteachers"
            class="list-group-item list-group-item-action active"
            aria-current="true"
            style="background-color:#2b6777; color:#000"
          >Teacher</a>
          <a
            href="/admin/managetypecourses"
            class="list-group-item list-group-item-action"
            aria-current="true"
          >Type Of Courses</a>
          <a
            href="/admin/managecourses"
            class="list-group-item list-group-item-action"
          >Courses</a>
        </div>
      </div>
      <div class="card">
        <h4 class="card-header">Total Users: {{users.length}} </h4>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="card">
        <h4
          class="card-header d-flex justify-content-between"
          style="background-color:#52ab98; color:#fff"
        >
          Teachers Management
        </h4>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Họ Tên</th>
              <th scope="col">Giới tính</th>
              <th scope="col">Phân Loại</th>
              <th scope="col">Email</th>
              <th scope="col">Password</th>
              <th scope="col">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <th scope="row">{{ID}}</th>
                <td>{{FullName}}</td>
                <td>{{gender}}</td>
                <td>{{type}}</td>
                <td>{{email}}</td>
                <td>{{password}}</td>
                <td class="text-right">
                  <a class="btn btn-sm btn-primary" href="#" role="button">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </a>
                  <a class="btn btn-sm btn-primary" href="#" role="button">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  </a>
                </td>

              </tr>
            {{/each}}
          </tbody>
        </table>

        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </div>
  </div>
</div>