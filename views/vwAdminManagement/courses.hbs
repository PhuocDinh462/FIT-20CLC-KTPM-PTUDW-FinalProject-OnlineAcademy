{{#section "css"}}
  <link
    rel="stylesheet"
    type="text/css"
    href="../../public/assets/css/admin/index.css"
  />
{{/section}}
<form method="post" class="form-submit">
  <div class="container-fluid" style="margin-top: 80px;">
    <div class="row" style="margin-bottom:16px">
      <div class="col-sm-3">
        <div class="card mb-3">
          <h4
            class="card-header"
            style="background-color:#52ab98; color:#fff"
          >Management</h4>
          <div class="list-group list-group-flush">
            <a
              href="/admin"
              class="list-group-item list-group-item-action"
              style="font-weight:bold"
            >
              All User
            </a>
            <a
              href="/admin/managestudents"
              class="list-group-item list-group-item-action"
              style="font-weight:bold"
            >Student</a>
            <a
              href="/admin/manageteachers"
              class="list-group-item list-group-item-action"
              style="font-weight:bold"
            >Teacher</a>
            <a
              href="/admin/managecategory"
              class="list-group-item list-group-item-action"
              style="font-weight:bold"
            >Course Categories</a>
            <a
              href="/admin/managelanguage"
              class="list-group-item list-group-item-action"
              style="font-weight:bold"
            >Languages</a>
            <a
              href="/admin/managecourses"
              class="list-group-item list-group-item-action active"
              aria-current="true"
              style="background-color:#2b6777; color:#fff; font-weight: bold"
            >Courses</a>
          </div>
        </div>
        <div class="card">
          <h4 class="card-header">Total Courses : {{length}} </h4>
        </div>
      </div>
      <div class="col-sm-9">
        <div class="card">
          <h4
            class="card-header d-flex justify-content-between"
            style="background-color:#52ab98; color:#fff"
          >
            Courses Management

          </h4>
          {{#if this.empty}}
            <div class="card-body text-muted">
              Empty Data!!!
            </div>
          {{else}}
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Language</th>
                  <th scope="col">Category</th>
                  <th class="text-center" scope="col">Students</th>
                  <th class="text-center" scope="col">Views</th>
                </tr>
              </thead>
              <tbody>
                {{#each courses}}
                  <tr>
                    <th scope="row">{{math @index "+" 1}}</th>
                    <td>{{name}}</td>
                    <td>{{languageName}}</td>
                    <td>{{categoryName}}</td>
                    <td class="text-center">{{studentList.length}}</td>
                    <td class="text-center">{{viewList.length}}</td>
                    <td class="text-right" style="display:flex">
                      <a
                        class="btn btn-sm btn-primary view"
                        href="/admin/managefeedbacksid?id={{_id}}"
                        role="button"
                        style="margin-right:4px"
                      >
                        <i class="fa fa-eye" aria-hidden="true"></i>
                      </a>
                      <button
                        class="btn btn-sm btn-primary view"
                        type="button"
                        data-toggle="modal"
                        data-target="#exampleModal"
                      >
                        <i class="fa fa-trash" aria-hidden="true"></i>
                      </button>
                      <div
                        class="modal fade"
                        id="exampleModal"
                        tabindex="-1"
                        role="dialog"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true"
                      >
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5
                                class="modal-title"
                                id="exampleModalLabel"
                              >Delete Course ID</h5>
                              <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                              >
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <div class="form-group mb-3">
                                <input
                                  name="CourseID"
                                  type="text"
                                  class="form-control"
                                  id="txtCourseID"
                                  value="{{_id}}"
                                  readonly
                                />
                              </div>
                              Are you sure want to delete this course?
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                              >Close</button>
                              <button
                                type="submit"
                                class="btn btn-danger"
                                formaction="/admin/managecourses/delete"
                              >Delete
                              </button>

                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{/if}}
          {{#if havePagination}}
            <ul class="pagination">
              {{#if firstPage}}
                <li class="page-item disabled">
                  <span class="page-link">Previous</span>
                </li>
              {{else}}
                <li class="page-item">
                  <a class="page-link" href="{{prevPage}}">Previous</a>
                </li>
              {{/if}}
              {{#each this.pageNumbers}}
                {{#if isCurrent}}
                  <li class="page-item active" aria-current="page">
                    <span class="page-link">{{value}}</span>
                  </li>
                {{else}}
                  <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                  </li>
                {{/if}}
              {{/each}}
              {{#if lastPage}}
                <li class="page-item disabled">
                  <span class="page-link">Next</span>
                </li>
              {{else}}
                <li class="page-item">
                  <a class="page-link" href="{{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          {{/if}}
          <div class="card-footer text-muted">
            Courses
          </div>
        </div>
      </div>
    </div>
  </div>
</form>