{{#section "css"}}
  <link
    rel="stylesheet"
    type="text/css"
    href="../../public/assets/css/admin/index.css"
  />
  <style>
    
        footer {
         margin-top: 50px;
        }
      
    </style>
{{/section}}
<div class="container-fluid" style="margin-top: 80px;">
  <div class="row" style="margin-bottom:16px">
    <div class="col-sm-3">
      <div class="card mb-3">
        <h4 class="card-header" style="background-color:#52ab98; color:#fff">
          Rated:
          {{rated}}

          <br />
          Total FeedBacks:
          {{listFeedBacks.length}}
        </h4>

      </div>
    </div>
    <div class="col-sm-9">
      <div class="card">
        <h4
          class="card-header d-flex justify-content-between"
          style="background-color:#52ab98; color:#fff"
        >
          {{this.course.name}}'s Feedback
        </h4>
        {{#if this.empty}}
          <div class="card-body text-muted">
            Empty Data!!!
          </div>
        {{else}}
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Content</th>
                <th class="text-center" scope="col">Rating</th>
              </tr>
            </thead>
            <tbody>
              {{#each listFeedBacks}}
                <tr>
                  <th scope="row">{{math @index "+" 1}}</th>
                  <td>{{email}}</td>
                  <td>{{content}}</td>
                  <td class="text-center">{{rating}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/if}}

        <div class="card-footer text-muted">
          <a
            class="btn btn-outline-success"
            href="/admin/managecourses"
            role="button"
          >
            <i class="fa fa-backward" aria-hidden="true"></i>
            Back
          </a>
        </div>
      </div>
    </div>
  </div>
</div>