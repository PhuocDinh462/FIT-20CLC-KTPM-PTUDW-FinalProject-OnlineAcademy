{{#section "css"}}
  <link
    rel="stylesheet"
    type="text/css"
    href="../../public/assets/css/admin/index.css"
  />
{{/section}}
<div class="container-fluid" style="margin-top: 80px;">
  <div class="row" style="margin-bottom:16px">
    <div class="col-sm-3">
      <div class="card mb-3">
        <h4
          class="card-header"
          style="background-color:#52ab98; color:#fff"
        >Management</h4>
        <div class="list-group list-group-flush">
          <a
            href="/admin/managefeedbacksid?id={{course._id}}"
            class="list-group-item list-group-item-action active"
            aria-current="true"
            style="background-color:#2b6777; color:#fff; font-weight: bold"
          >
            FeedBacks
          </a>
          <a
            href="/admin/manageratingid?id={{course._id}}"
            class="list-group-item list-group-item-action"
            style="font-weight:bold"
          >Rating</a>
        </div>
      </div>
      <div class="card">
        <h4 class="card-header">Total FeedBacks: {{listFeedBacks.length}} </h4>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="card">
        <h4
          class="card-header d-flex justify-content-between"
          style="background-color:#52ab98; color:#fff"
        >
          {{this.course.name}}'s Feedback
        </h4>
        {{#if this.empty}}
          <div class="card-body text-muted">
            Empty Data!!!
          </div>
        {{else}}
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Content</th>
              </tr>
            </thead>
            <tbody>
              {{#each listFeedBacks}}
                <tr>
                  <th scope="row">{{math @index "+" 1}}</th>
                  <td>{{email}}</td>
                  <td>{{content}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/if}}
        {{#if havePagination}}
          <ul class="pagination">
            {{#if firstPage}}
              <li class="page-item disabled">
                <span class="page-link">Previous</span>
              </li>
            {{else}}
              <li class="page-item">
                <a class="page-link" href="{{prevPage}}">Previous</a>
              </li>
            {{/if}}
            {{#each this.pageNumbers}}
              {{#if isCurrent}}
                <li class="page-item active" aria-current="page">
                  <span class="page-link">{{value}}</span>
                </li>
              {{else}}
                <li class="page-item">
                  <a class="page-link" href="?page={{value}}">{{value}}</a>
                </li>
              {{/if}}
            {{/each}}
            {{#if lastPage}}
              <li class="page-item disabled">
                <span class="page-link">Next</span>
              </li>
            {{else}}
              <li class="page-item">
                <a class="page-link" href="{{nextPage}}">Next</a>
              </li>
            {{/if}}
          </ul>
        {{/if}}
        <div class="card-footer text-muted">
          <a
            class="btn btn-outline-success"
            href="/admin/managecourses"
            role="button"
          >
            <i class="fa fa-backward" aria-hidden="true"></i>
            Back
          </a>
        </div>
      </div>
    </div>
  </div>
</div>