{{#section "css"}}
  <link
    rel="stylesheet"
    type="text/css"
    href="../../../public/assets/css/admin/edit.css"
  />
  <style>
    footer
    { margin-top: 50px; } 
  </style>
{{/section}}

<form method="post" class="form-submit" style="min-height: 600px;">
  <div
    class="card col-md-9"
    style="margin-left: auto; margin-right:auto; padding:0"
  >
    <h4
      class="card-header d-flex justify-content-between"
      style="background-color:#52ab98; color:#fff"
    >
      Edit Permission
    </h4>
    <div class="card-body">
      <div class="form-group">
        <label for="txtUserID" style="font-weight:bold">User ID</label>
        <input
          name="UserID"
          type="text"
          class="form-control"
          id="txtUserID"
          value="{{user._id}}"
          readonly
        />
      </div>
      <div class="form-group mb-3">
        <label for="txtUserName" style="font-weight:bold">First Name</label>
        <input
          name="UserFirstName"
          type="text"
          class="form-control"
          id="txtUserFirstName"
          value="{{user.firstName}}"
          readonly
        />
        <label for="txtUserLastName" style="font-weight:bold">Last Name</label>
        <input
          name="UserLastName"
          type="text"
          class="form-control"
          id="txtUserLastName"
          value="{{user.lastName}}"
          readonly
        />
        <label for="txtUserDisable" style="font-weight:bold">User Disable Status</label>
        {{#if (ifEqualString user.blocked "True")}}
          <input
            name="UserDisable"
            type="text"
            class="form-control"
            id="txtUserDisable"
            value="Blocked"
            readonly
          />
        {{else}}
          <input
            name="UserDisable"
            type="text"
            class="form-control"
            id="txtUserDisable"
            value="Activated"
            readonly
          />
        {{/if}}
      </div>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <label
              class="input-group-text input-blocked"
              for="inputGroupSelect02"
            >Options Blocked</label>
          </div>
          <select class="custom-select" id="inputGroupSelect02" name="blocked">
            <option selected value="False">Activated</option>
            <option value="True">Blocked</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Options
              permission</label>
          </div>
          <select
            class="custom-select"
            id="inputGroupSelect01"
            name="permission"
          >
            <option selected value="Student">Student</option>
            <option value="Teacher">Teacher</option>
          </select>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex text-muted justify-content-between">
      <a class="btn btn-outline-success" href="/admin" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back
      </a>

      <div>
        <button
          type="button"
          class="btn btn-danger"
          data-toggle="modal"
          data-target="#exampleModal"
        >
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete
        </button>
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          role="dialog"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Notification</h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure want to delete this user?
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >Close</button>
                <button
                  type="submit"
                  class="btn btn-danger"
                  formaction="/admin/edituser/del"
                >Delete</button>
              </div>
            </div>
          </div>
        </div>

        <button
          type="submit"
          class="btn btn-primary btn-save"
          formaction="/admin/edituser/patch"
        >
          <i class="fa fa-check" aria-hidden="true"></i>
          Save
        </button>
      </div>
    </div>
  </div>
</form>