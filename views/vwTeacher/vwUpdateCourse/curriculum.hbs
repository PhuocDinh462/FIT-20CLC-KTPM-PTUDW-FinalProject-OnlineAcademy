{{#section "js"}}{{/section}}
<div
  class="container-fluid"
  style="margin-top: 100px; margin-bottom: 1%; min-height: 500px;"
>
  <div class="container">
    <div class="row" style="min-height: 500px;">
      <nav class="col-2 bg-light sidebar">
        <ul class="nav flex-column">
          <li class="pt-5 nav-item">
            <a
              class="nav-link"
              href="/teacher/course/{{course._id}}/info"
            >Infomation
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="">
              Curriculum
            </a>
          </li>
        </ul>
      </nav>
      <div class="col-10 h-100">
        <div class="card">
          <div class="card-header text-center">
            <h3>Course Curriculum</h3>
            <p>Hereâ€™s where you add course content - like lectures, assignments,
              and more.
            </p>
          </div>
          <div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col" style="width: 20%;">Title</th>
                  <th scope="col">Description</th>
                  <th scope="col" style="width: 25%;">Created At</th>
                  <th scope="col" style="width: 15%;">
                    <a class="btn btn-sm btn-primary" href="lecture">
                      <i class="fa fa-plus" aria-hidden="true"></i>
                      Add Lecture
                    </a>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each lectures}}
                  <tr>
                    <th scope="row">{{math @index "+" 1}}</th>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{createdAt}}</td>
                    <td class="text-center">
                      <a
                        class="btn btn-sm btn-outline-primary"
                        href="lecture/{{_id}}"
                        role="button"
                      >
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>